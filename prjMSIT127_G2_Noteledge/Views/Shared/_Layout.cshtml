<script>
    function fn彈出確認登出視窗()
    {
        Swal.fire({
            title: '您確定要登出帳號嗎??',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: "取消",
            confirmButtonText: '確定',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: '您成功登出!!',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = "/Member/Login"
                    }
                });
            }
        });
    }
</script>
