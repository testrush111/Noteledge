    @{
        CMember member = Session[CMemberSession.Session_Login_User] as CMember;
    }
</head>
<body class="animsition">
    <!-- Header -->
    <header>
        <!-- Header desktop -->
        <div class="container-menu-desktop">
            <div class="wrap-menu-desktop">
                <nav class="limiter-menu-desktop container">

                    <!-- Logo desktop -->
                    <a href="@Url.Action("MyHome", "Home")" class="logo">
                        <img src="~/Image/Logo/Logo_text_green2.PNG" alt="Note$edge-LOGO" />
                    </a>

                    <!-- Menu desktop -->
                    <div class="menu-desktop">
                        <ul class="main-menu">
                            <li class="active-menu">
                                @Html.ActionLink("關於Note$edge", "MyHome", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("我的筆記", "Index", "Note")
                            </li>

                            <li class="label1" data-label1="hot">
                                @Html.ActionLink("筆記商城", "Index", "ShoppingHome")
                            </li>
                            <li>
                                @Html.ActionLink("聯絡我們", "MyHome", "Home")
                            </li>
                        </ul>
                    </div>
                    <!-- Icon header -->
                    <div class="wrap-icon-header flex-w flex-r-m">
                        <div class="col-xl-6 col-lg-5">
                            <form class="header-search-form">
                                <input type="text" placeholder="搜尋 ....">
                                <button><i class="material-icons">search</i></button>
                            </form>
                        </div>
                        @if (member == null && ViewBag.name == null)
                        {

                            <div class="p-r-20">
                                <span class="material-icons cl0" style="font-size:36px;vertical-align: middle;">
                                    account_circle
                                </span>
                                @Html.ActionLink("登入", "Login", "Member", null, new { @class = "fs-18 cl0 hov-cl2 trans-04 p-l-5 " })
                            </div>

                            <div class="p-r-20">
                                <span class="material-icons cl0" style="font-size:36px;vertical-align: middle;">
                                    login
                                </span>
                                @Html.ActionLink("註冊", "SignIn", "Member", null, new { @class = "fs-18 cl0 hov-cl2 trans-04 p-l-5" })
                            </div>
                        }
                        @if (ViewBag.name != null)
                        {
                            <div class="btn-group">
                                <button type="button" class="dropdown-toggle cl0 fs-20 hov-cl2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img src="~/Image/MemberImage/MemberPreset.jpg" class="rounded-circle" style="width:45px">
                                    <span class="fs-15"> @ViewBag.name </span>
                                </button>
                                <div class="dropdown-menu">
                                    @Html.ActionLink("會員設定", "MemberSetup", "Member", null, new { @class = "dropdown-item fs-16" })
                                    @Html.ActionLink("會員通知", "MemberNotice", "Member", null, new { @class = "dropdown-item fs-16" })
                                    @Html.ActionLink("會員訂單", "MemberOrder", "Member", null, new { @class = "dropdown-item fs-16" })
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" onclick="fn彈出確認登出視窗()">登出</a>
                                </div>
                            </div>
                        }
                        else if (member != null && ViewBag.name == null)
                        {
                            <div class="btn-group">
                                <button type="button" class="dropdown-toggle cl0 fs-20 hov-cl2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img src="@member.fPhoto" class="rounded-circle" style="width:45px">
                                    <span class="fs-15"> @member.fFirstName@member.fLastName </span>
                                </button>
                                <div class="dropdown-menu">
                                    @Html.ActionLink("會員設定", "MemberSetup", "Member", null, new { @class = "dropdown-item" })
                                    @Html.ActionLink("會員通知", "MemberNotice", "Member", null, new { @class = "dropdown-item" })
                                    @Html.ActionLink("會員訂單", "MemberOrder", "Member", null, new { @class = "dropdown-item" })
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" onclick="fn彈出確認登出視窗()">登出</a>
                                </div>
                            </div>
                        }
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <div>
        @RenderBody()
    </div>
    <!-- Footer -->
