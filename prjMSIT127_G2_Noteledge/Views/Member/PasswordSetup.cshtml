@using Models.MemberModels
@model Models.MemberModels.CMemberEditor
@{
    ViewBag.Title = "PasswordSetup";
}

<style>
    .Form {
        border: 1px solid black;
        width: 800px;
        height: 450px;
        padding: 40px;
        margin: auto;
        margin-top: 100px;
        line-height: 50px;
    }
    .pass {
        width: 76%;
        color: rgb(38, 50, 56);
        font-weight: 700;
        font-size: 14px;
        letter-spacing: 1px;
        background: rgba(136, 126, 126, 0.04);
        padding: 10px 20px;
        border: none;
        border-radius: 20px;
        outline: none;
        box-sizing: border-box;
        border: 2px solid rgba(0, 0, 0, 0.02);
        margin-bottom: 50px;
        margin-left: 46px;
        text-align: center;
        margin-bottom: 27px;
        font-family: 'cwTeXYen', sans-serif;
        font-size:25px;
        font-family:標楷體
    }
</style>

    <section class="section">
        <div class="container" style="margin-top:150px;margin-bottom:150px;">
            <div id="forgetPW" class="Form" align="center">
                <form id="form-forget" method="post">
                    <div class="modal-footer" >
                        <input class="pass" style="margin-right:135px;width:400px" minlength="5" maxlength="15" id="NewfPassword" name="NewfPassword" type="password" placeholder="輸入新密碼" required autofocus />
                    </div>
                    <div class="modal-footer">
                        <input class="pass" style="margin-right:135px;width:400px" minlength="5" maxlength="15" id="ChackNewfPassword" name="ChackNewfPassword" type="password" placeholder="再次輸入密碼" required />
                    </div>
                    <div style="font-size: 18px;font-weight:900">
                        @if (ViewBag.Error == "!與上方密碼不相符")
                        {
                            <p style="line-height: 34px; height: 34px; width:170px; margin-bottom: 0px;margin-left:0px ;color:red">！與上方密碼不相符</p>
                        }
                        else
                        {
                            <p style="line-height: 34px; height: 34px; width: 80%; margin-bottom: 0px;"></p>
                        }
                    </div>
                    <div class="form-group">
                        <div style="padding-left:30px;padding-top:20px">
                            <input type="submit" value="修改" class="btn btn-lg btn-primary btn-block" name="EditorPassword" style="width:300px;"s />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
